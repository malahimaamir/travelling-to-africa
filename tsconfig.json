{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.js", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/layout.jsx", "app/page.jsx", "components/Button.jsx", "components/Destination.jsx", "components/Features.jsx", "components/Footer.jsx", "components/Hero.jsx", "components/Navbar.jsx", "components/Sponsor.jsx", "components/Testimonials.jsx", "components/Title.jsx", "components/TravelPoint.jsx", "constants/index.js", "tailwind.config.js"],
  "exclude": ["node_modules"]
}
